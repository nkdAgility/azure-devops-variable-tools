{
  "id": "7e7e1b5c-d87d-4a4c-a51a-95de28ce0fb9",
  "name": "variablerehydration",
  "friendlyName": "Variable (re)Hydration Task",
  "description": "Loads the saved variables file and rehydrates the variables.",
  "helpMarkDown": "v#{GitVersion.FullSemVer}# [More Information](https://github.com/nkdAgility/vsts-variable-hydration-tasks#readme)",
  "category": "Utility",
  "visibility": [
    "Build",
    "Deploy"
  ],
  "author": "Martin Hinshelwood",
  "version": {
    "Major": "#",
    { "GitVersion.Major" },
    "#",

    "Minor": "#",
    { "GitVersion.Minor" },
    "#",

    "Patch": "#",
    { "GitVersion.Patch" },
    "#"
  },
  "minimumAgentVersion": "1.92.0",
  "groups": [
    {
      "name": "missing",
      "displayName": "Missing variables",
      "isExpanded": true
    }
  ],
  "inputs": [
    {
      "name": "jsonfiles",
      "type": "filePath",
      "label": "JSON Path",
      "defaultValue": "**\\meta-*.json",
      "required": true,
      "helpMarkDown": "Select the json file, or files to rehydrate."
    }
  ],
  "instanceNameFormat": "(re)Hydrate Build Variables $(jsonfiles)",
  "execution": {
    "PowerShell3": {
      "target": "$(currentDirectory)\\rehydrate-variables.ps1",
      "argumentFormat": "",
      "workingDirectory": "$(System.DefaultWorkingDirectory)"
    }
  }
}